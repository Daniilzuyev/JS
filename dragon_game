slaying = true;
youHit = Math.floor(Math.random() * 2);
damageThisRound = Math.floor(Math.random()*5 + 1);
totalDamage = 0;
while(slaying){
    slaying = false;
    if(youHit=true){
        console.log("you hit the dragon");
        totalDamage += damageThisRound;
        if(totalDamage>=4){
            console.log("the player slew the dragon")
            slaying = false;
            }
        else{
            youHit = Math.floor(Math.random() * 2);
            }
        }
    else{
        console.log("dragon hit you")
        }
    }
